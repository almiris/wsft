<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>WSFT WebApp</display-name>
	<filter>
		<filter-name>WSFT</filter-name>
		<filter-class>fr.almiris.open.wsft.WSFTFilter</filter-class>
		<init-param>
    		<param-name>conf</param-name>
    		<param-value>/WEB-INF/wsft-conf.xml</param-value>
  		</init-param>
		<init-param>
    		<param-name>debug</param-name>
    		<param-value>true</param-value>
  		</init-param>
			</filter>
	<filter-mapping>
		<filter-name>WSFT</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>
